<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbbbbb"
    tools:context="com.example.max.aicomplier.MainActivity"
    android:orientation="horizontal">

    <Button
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="match_parent"

        android:visibility="invisible"
        android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/HelloOpenCvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:camera_id="any"
        app:show_fps="false" />

    <Button
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableEnd="@android:drawable/ic_media_next"
        android:drawableRight="@android:drawable/ic_media_next" />

    <ImageView
        android:id="@+id/c1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/corners"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/c4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/corners"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/corners"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/c3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/corners"
        android:visibility="invisible" />


</RelativeLayout>
